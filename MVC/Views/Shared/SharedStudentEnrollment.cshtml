</style>
<div id="divStudentEnrollment">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Course Title</th>
                <th>Course Description</th>
                <th>Year</th>
                <th>Quarter</th>
                <th>Session</th>
                <th>Schedule Day</th>
                <th>Schedule Time</th>
                <th>Instructor Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Grade</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr class ="datatable">
                <td data-bind="text: scheduleid"></td>
                <td data-bind="text: coursetitle"></td>
                <td data-bind="text: coursedescription"></td>
                <td data-bind="text: year"></td>
                <td data-bind="text: quarter"></td>
                <td data-bind="text: session"></td>
                <td data-bind="text: scheduleday"></td>
                <td data-bind="text: scheduletime"></td>
                <td data-bind="text: instructorid"></td>
                <td data-bind="text: firstname"></td>
                <td data-bind="text: lastname"></td>
                <td data-bind="text: grade"></td>
                <td>
                <a data-bind="DeleteEnrollment: $data">drop</a>
                </td>
            </tr>
        </tbody>
    </table>
    <br /><a href='/Student/CreateEnrollment?id=@id' title='create'>enroll in new class</a>
</div>

<script type="text/javascript">
    $(document).ready(function () {       
            var enrollmentViewModelObj = new EnrollmentViewModel();
            enrollmentViewModelObj.GetAllEnroll("@id");
    });
</script>


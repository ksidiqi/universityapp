@{
    ViewBag.Title = "Index";
    var id = ViewBag.Id;
}

<h2>Student Detail</h2>

<a href="/Student/Edit?id=@id">edit</a>
<div id="divStudentContent">
    <table class="table table-striped">
        <tbody data-bind="foreach: viewModel.studentInfos">

            <tr>
                <td data-bind="visible: !edit()">Id</td>
                <td data-bind="text: Id, visible: !edit()"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    Id
                </td>
                <td data-bind="text: Id">
                </td>
            </tr>


            <tr>
                <td data-bind="visible: !edit()">SSN</td>
                <td data-bind="text: SSN, visible: !edit(), click: change"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    SSN
                </td>
                <td class="form-group">
                    <input type="text" data-bind="value: SSN" />
                </td>
            </tr>
            


            <tr>
                <td data-bind="visible: !edit()">FirstName</td>
                <td data-bind="text: FirstName, visible: !edit(), click: change"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    FirstName
                </td>
                <td class="form-group">
                    <input type="text" data-bind="value: FirstName" />
                </td>
            </tr>


            <tr>
                <td data-bind="visible: !edit()">LastName</td>
                <td data-bind="text: LastName, visible: !edit(), click: change"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    LastName
                </td>
                <td class="form-group">
                    <input type="text" data-bind="value: LastName" />
                </td>
            </tr>


            <tr>
                <td data-bind="visible: !edit()">Email</td>
                <td data-bind="text: Email, visible: !edit(), click: change"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    Email
                </td>
                <td class="form-group">
                    <input type="text" data-bind="value: Email" />
                </td>
            </tr>


            <tr>
                <td data-bind="visible: !edit()">ShoeSize</td>
                <td data-bind="text: ShoeSize, visible: !edit(), click: change"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    ShoeSize
                </td>
                <td class="form-group">
                    <input type="text" data-bind="value: ShoeSize" />
                </td>
            </tr>


            <tr>
                <td data-bind="visible: !edit()">Weight</td>
                <td data-bind="text: Weight, visible: !edit(), click: change"></td>
            </tr>
            <tr data-bind="visible: edit()">
                <td class="form-group">
                    Weight
                </td>
                <td class="form-group">
                    <input type="text" data-bind="value: Weight" />
                </td>
            </tr>

            <tr data-bind="visible: edit()">
                <td>&nbsp;</td>
                <td><button type="button" class="btn btn-default" data-bind="click: accept">Update</button></td>
            </tr>

        </tbody>
    </table>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var studentViewModelObj = new StudentViewModel();
        studentViewModelObj.Load2("@id");
    });
</script>



<h3>Current Enrollment</h3>


<div id="divEnrollment">
    <div id="divInstructor1">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Schedule Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Course level</th>
                    <th>Instructor First Name</th>
                    <th>Instructor Last Name</th>
                    <th> Day</th>
                    <th>Time</th>
                    <th>Quarter</th><th>Year</th>

                </tr>
            </thead>
            <tbody data-bind="foreach: viewModel.currentCourseScheduleList">
                <tr>
                    <td data-bind="text: SchedId"></td>
                    <td data-bind="text: Title"></td>
                    <td data-bind="text: Description"></td>
                    <td data-bind="text: Level"></td>
                    <td data-bind="text: Instructor_fn"></td>
                    <td data-bind="text: Instructor_ln"></td>
                    <td data-bind="text: ScheduleDay"></td>
                    <td data-bind="text: ScheduleTime"></td>
                    <td data-bind="text: Quarter"></td>
                    <td data-bind="text: Year"></td>
                    <td> <button type="button" class="btn btn-danger" data-bind="click: deleteEnrollment">Delete</button> </td>
                </tr>
            </tbody>
        </table>
    </div>


    <div id="divAddEnrollment" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Enrollment</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Schedule Id</label>
                        <input type="text" data-bind="value: viewModel.newSchedule.Id" />

                        <input type="hidden" value="@id" data-bind="value: viewModel.newSchedule.StudentId" />

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: viewModel.AddNewEnrollment">Add Enrollment</button>
            </div>
        </div>
    </div>

        <div id="divFutureCourseSchedule">
            <h4>Future Enrollment</h4>
            <table class="table table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Schedule Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Course level</th>
                        <th>Instructor First Name</th>
                        <th>Instructor Last Name</th>
                        <th> Day</th>
                        <th>Time</th>
                        <th>Quarter</th>
                        <th>Year</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: viewModel.futureCourseScheduleList">
                    <tr>
                        <td data-bind="text: SchedId"></td>
                        <td data-bind="text: Title"></td>
                        <td data-bind="text: Description"></td>
                        <td data-bind="text: Level"></td>
                        <td data-bind="text: Instructor_fn"></td>
                        <td data-bind="text: Instructor_ln"></td>
                        <td data-bind="text: ScheduleDay"></td>
                        <td data-bind="text: ScheduleTime"></td>
                        <td data-bind="text: Quarter"></td>
                        <td data-bind="text: Year"></td> 
                        <td> <button type="button" class="btn btn-danger" data-bind="click: deleteEnrollment">Delete</button> </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div id="divPreviousCourseSchedule">
            <h4>Previous Enrollment</h4>
            <table class="table table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Schedule Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Course level</th>
                        <th>Instructor First Name</th>
                        <th>Instructor Last Name</th>
                        <th> Day</th>
                        <th>Time</th>
                        <th>Quarter</th>
                        <th>Year</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: viewModel.previousCourseScheduleList">
                    <tr>
                        <td data-bind="text: SchedId"></td>
                        <td data-bind="text: Title"></td>
                        <td data-bind="text: Description"></td>
                        <td data-bind="text: Level"></td>
                        <td data-bind="text: Instructor_fn"></td>
                        <td data-bind="text: Instructor_ln"></td>
                        <td data-bind="text: ScheduleDay"></td>
                        <td data-bind="text: ScheduleTime"></td>
                        <td data-bind="text: Quarter"></td>
                        <td data-bind="text: Year"></td>
                    </tr>
                </tbody>
            </table>
        </div>


</div>

</div>

